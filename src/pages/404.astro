---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404 - That's an error" >	
    <style slot="head">   
        .bg-img {
            box-shadow: inset 0 0 80px 60px rgb(241, 245, 249, 1);   
        }
        :global(.dark .bg-img) {
            box-shadow: inset 0 0 80px 60px rgb(15, 23, 42, 1);   
        }
    </style>
	<main slot="content" class="relative pt-[44px] md:pt-[52px] h-full overflow-auto">
        <div class="fixed bg-slate-100 dark:bg-slate-900 h-full w-full">
            <div class="h-full w-full bg-img bg-cover bg-[url(/assets/6978794.jpg)] opacity-[0.25]"/>
        </div>  
        <div class="relative px-6 md:px-40 xl:px-72 2xl:px-96 pt-20 pb-4 h-full">
        <div class="flex justify-center font-bold text-5xl text-center">
            404 - That's an error
        </div>
        </div>
	</main>
</BaseLayout>