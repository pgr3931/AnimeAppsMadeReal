---
import '@fortawesome/fontawesome-free/css/solid.css';
import '@fortawesome/fontawesome-free/css/fontawesome.css';
import Header from '../components/Header.astro';
import LinkPreview from '../components/LinkPreview.astro';
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>Anime Apps Made Real</title>

	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300&display=swap" rel="stylesheet">
	<script>
		if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
			localStorage.theme = 'dark';
  			document.documentElement.classList.add('dark');
		} else {
			document.documentElement.classList.remove('dark');
		}
	</script>
</head>
<body class="font-['Nunito'] bg-gradient-to-l from-slate-50 to-slate-300 dark:from-slate-900 dark:to-slate-700 text-gray-900 dark:text-slate-100 h-screen overflow-hidden">	
	<Header/>
	<main id="main" class="grid grid-cols-1 lg:grid-cols-2 px-6 md:px-40 xl:px-72 2xl:px-96 pt-20 pb-4 gap-20 h-full overflow-auto">
		<div class="flex justify-center align-items-center rounded p-3 dark:bg-slate-900 bg-slate-50">
			<!-- <img src="https://media0.giphy.com/media/DHt7C9vXEetYMmU1jP/giphy.gif" />	 -->
		</div>
		<div class="flex flex-col justify-between items-stretch min-h-[945px]">
